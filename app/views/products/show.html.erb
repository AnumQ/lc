<div id="product">
<p>
  <%= @product.name %>
</p>
<br/>
<p>
	<%= image_tag @product.photo.url(:medium) %>
</p>
<br/>
<p>
  <b>Description:</b>
  <%= @product.description %>
</p>
<p>
  <b>Price:</b>
  <%= @product.price %>
</p>
